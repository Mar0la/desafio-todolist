{
  "compilerOptions": {
    "target": "ES6", // Define a versão do ECMAScript que você deseja direcionar
    "module": "CommonJS", // Define o sistema de módulos (CommonJS é comum para Node.js)
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src", // Diretório raiz de origem dos arquivos TypeScript
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"], // Padrões de inclusão dos arquivos TypeScript
  "exclude": ["node_modules"] // Padrões de exclusão de diretórios
}
